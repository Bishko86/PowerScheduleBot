{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./dist",       /* Where the build goes */
    "rootDir": "./",          /* Where your source code is */
    "strict": true,           /* Better error checking */
    "moduleResolution": "NodeNext",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}